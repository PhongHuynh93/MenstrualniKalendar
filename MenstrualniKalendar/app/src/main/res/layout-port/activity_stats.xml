<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="#40c118"
                android:layout_marginRight="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prosječna duljina         ciklusa:"
                    android:id="@+id/textView11"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textAlignment="viewEnd"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Najdulji ciklus:"
                    android:id="@+id/textView12"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textAlignment="viewEnd"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Najkraći ciklus:"
                    android:id="@+id/textView13"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textAlignment="viewEnd"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prosječni intenzitet menstruacije:"
                    android:id="@+id/textView14"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textAlignment="viewEnd"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Glavobolja tijekom menstruacije:"
                    android:id="@+id/textView15"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textAlignment="viewEnd"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prosječni intenzitet glavobolje:"
                    android:id="@+id/textView17"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textAlignment="viewEnd"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:background="#40c118">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_avg"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="/???" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_max"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="/???" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_min"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="/???" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_avg_period_intensity"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="viewStart"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="35dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:text="/???" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_headache_during_period"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="viewStart"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:text="/???" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_avg_headache_intensity"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="/???" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>