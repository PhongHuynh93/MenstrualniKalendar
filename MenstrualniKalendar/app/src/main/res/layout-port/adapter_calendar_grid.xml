<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:background="#c1f78b">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:minHeight="25dp"
        android:layout_margin="0dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31"
            android:id="@+id/adapter_date"
            android:textSize="20sp"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:paddingLeft="2dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/adapter_coitus"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:src="@drawable/heart_on"
            android:cropToPadding="false"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:minHeight="25dp"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/adapter_period"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:src="@drawable/droplet_on"
            android:cropToPadding="false"
            android:layout_gravity="top|center_vertical"
            android:visibility="invisible"
            android:layout_margin="1dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/adapter_headache"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:src="@drawable/headache_on"
            android:cropToPadding="false"
            android:layout_gravity="top|center_vertical"
            android:visibility="invisible"
            android:layout_margin="1dp" />
    </LinearLayout>
</LinearLayout>