<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center_vertical"
    android:background="#c1f78b">

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="31"
        android:id="@+id/adapter_date"
        android:textSize="20sp"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/adapter_coitus"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:src="@drawable/heart_on"
        android:cropToPadding="false"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        android:layout_marginLeft="100dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/adapter_headache"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:src="@drawable/headache_on"
        android:cropToPadding="false"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/adapter_period"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:src="@drawable/droplet_on"
        android:cropToPadding="false"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_comment"
        android:layout_marginLeft="50dp"
        android:textSize="18sp"
        android:maxEms="10"
        android:lines="1" />
</LinearLayout>