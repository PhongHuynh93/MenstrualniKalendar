<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff36f">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:paddingBottom="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#fff36f"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="1dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:id="@+id/activator_back"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/calendar_back" />
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fff36f"
                        android:paddingLeft="45dp"
                        android:paddingRight="50dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2.6.2016."
                            android:id="@+id/datumShortDate"
                            android:textSize="25sp"
                            android:textColor="#000000"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Äetvrtak"
                            android:id="@+id/datumDayOfWeek"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:textColor="#666"
                            android:layout_weight="1"
                            android:layout_marginTop="-5dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day_pill"
                        android:id="@+id/textView4"
                        android:layout_marginLeft="20dp"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:background="#ddd"
                        android:textColor="#000"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/activator_pill"
                        android:src="@drawable/pill_off"
                        android:layout_gravity="center"
                        android:background="#bbb"
                        android:padding="10dp"
                        android:layout_marginLeft="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_period"
                            android:id="@+id/textView5"
                            android:layout_marginLeft="20dp"
                            android:textSize="15sp"
                            android:padding="5dp"
                            android:background="#ddd"
                            android:textColor="#000" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#bbb"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:id="@+id/activator_period"
                                android:src="@drawable/droplet_off" />

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rate_period"
                                android:layout_gravity="center"
                                android:numStars="3"
                                android:stepSize="1"
                                android:rating="0"
                                android:visibility="invisible"
                                android:focusableInTouchMode="false" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:id="@+id/cancel_period"
                                android:layout_gravity="center"
                                android:background="@mipmap/module_cancel"
                                android:visibility="invisible" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_headache"
                            android:id="@+id/textView6"
                            android:layout_marginLeft="20dp"
                            android:textSize="15sp"
                            android:padding="5dp"
                            android:background="#ddd"
                            android:textColor="#000" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="#bbb"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:id="@+id/activator_headache"
                                android:layout_gravity="center"
                                android:src="@drawable/headache_off" />

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rate_headache"
                                android:layout_gravity="center"
                                android:numStars="3"
                                android:stepSize="1"
                                android:rating="0"
                                android:visibility="invisible" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:id="@+id/cancel_headache"
                                android:layout_gravity="center"
                                android:background="@mipmap/module_cancel"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_coitus"
                            android:id="@+id/textView7"
                            android:layout_marginLeft="20dp"
                            android:textSize="15sp"
                            android:padding="5dp"
                            android:background="#ddd"
                            android:textColor="#000" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="#bbb"
                            android:paddingTop="8dp"
                            android:paddingBottom="9dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:id="@+id/activator_coitus"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/heart_off" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:id="@+id/rate_coitus"
                                android:layout_gravity="center"
                                android:numStars="2"
                                android:stepSize="1"
                                android:rating="0"
                                android:layout_marginLeft="40dp"
                                android:layout_marginRight="40dp"
                                android:src="@drawable/condom_off"
                                android:visibility="invisible" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:id="@+id/cancel_coitus"
                                android:layout_gravity="center"
                                android:background="@mipmap/module_cancel"
                                android:visibility="invisible"
                                android:layout_marginLeft="5dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_comment"
                            android:id="@+id/textView8"
                            android:layout_marginLeft="20dp"
                            android:textSize="15sp"
                            android:padding="5dp"
                            android:background="#ddd"
                            android:textColor="#000" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:ems="10"
                            android:id="@+id/comment_input"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="#bbb"
                            android:minLines="2"
                            android:minHeight="57dp"
                            android:maxLines="3"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>